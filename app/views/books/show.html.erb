<h1>詳細ページ</h1>
<%= link_to '一覧', books_path, class: 'big-action-button' %>

<% if @book.cover.attached? %>
    <div class="book-cover-wrapper">
        <%= image_tag @book.cover, class: "book-cover" %>
    </div>
<% end %>

<div class='show-container'>
    <h2><%= @book.title %></h2>
    <%= @book.rating.times do %>
    ★
<% end %>
<p><%= @book.author %></p>
<p><%= @book.impression %></p>
</div>