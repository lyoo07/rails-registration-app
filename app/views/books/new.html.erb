<h1>本を登録する</h1>
<div class="new-action-link-wrapper">
    <%= link_to '一覧', books_path, class: 'new-action-link'%>
</div>


<%= form_with model: @book, html: {class: "new-form"} do |f| %>
    <div>
    <%= f.label :title, 'タイトルを入力' %><br>
    <%= f.text_field :title, class: 'new-input-field' %>
    </div>

    <div>
        <%= f.label :author, 'author' %><br>
        <%= f.text_field :author, class: 'new-input-field' %>
    </div>

    <div>
        <%= f.label :impression, '感想' %><br>
        <%= f.text_area :impression, class: 'impression-field' %>
    </div>

    <div>
        <%= f.label :star, '評価' %>
        <%= f.number_field :star, in:1..5, class: 'star-input-field' %>
    </div>

    <%= f.submit "保存する", class: 'submit' %>
<% end %>